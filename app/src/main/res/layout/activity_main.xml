<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewServicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tus Servicios"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGastos"
        android:layout_width="136dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/aqua"
        android:text="Registro de gastos"
        android:textColor="#0B0B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpciones" />

    <Button
        android:id="@+id/buttonCalendario"
        android:layout_width="136dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/aqua"
        android:text="Balance y calendario"
        android:textColor="#0B0B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGastos" />

    <Button
        android:id="@+id/buttonAgregar"
        android:layout_width="136dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/aqua"
        android:text="Agregar servicio"
        android:textColor="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpciones" />

    <Button
        android:id="@+id/buttonEliminar"
        android:layout_width="136dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/aqua"
        android:text="Eliminar servicio"
        android:textColor="#070707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAgregar" />

    <TextView
        android:id="@+id/textViewOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opciones de gestiÃ³n"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="318dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerServicios"
        android:layout_width="409dp"
        android:layout_height="268dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textViewOpciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewServicios" />

</androidx.constraintlayout.widget.ConstraintLayout>